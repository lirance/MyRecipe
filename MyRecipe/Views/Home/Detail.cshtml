@model MyRecipe.Models.Recipe

<div>
    <h1>@Model.Name</h1>
</div>

<div class="thumbnail">
    <img class="img-thumbnail" src="@Model.ImageUrl" alt="" />
    <div class="caption-full">
        <h3 class="pull-right">$ @Model.Price.ToString("#0.00")</h3>
        <h3>
            @Model.Name
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>